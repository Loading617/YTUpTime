{
    "manifest_version": 3,
    "name": "YTUpTime",
    "version": 1.0,
    "description": "Show the exact upload time of YouTube videos.",
    "permissions": [],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://www.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["config.js", "content.js"],
            "css": ["popup.css"]
        }
    ],
    "icons": {
        "16": "icons/ytuptime_16x16.png",
        "32": "icons/ytuptime_32x32.png",
        "48": "icons/ytuptime_48x48.png",
        "128": "icons/ytuptime_128x128.png"
    },
    "action": {
      "default_title": "YTUpTime"
    }
}